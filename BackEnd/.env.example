# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=game_store
DB_USERNAME=root
DB_PASSWORD=

# Application Configuration
APP_NAME=GameStore
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_KEY=base64:your-secret-key-here

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_TTL=60
JWT_REFRESH_TTL=20160

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# MoMo Configuration
MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api/create
MOMO_PARTNER_CODE=your-momo-partner-code
MOMO_ACCESS_KEY=your-momo-access-key
MOMO_SECRET_KEY=your-momo-secret-key

# VNPay Configuration
VNPAY_TMN_CODE=your-vnpay-tmn-code
VNPAY_HASH_SECRET=your-vnpay-hash-secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif
MAX_IMAGE_WIDTH=1920
MAX_IMAGE_HEIGHT=1080

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Security Configuration
CSRF_LIFETIME=120
RATE_LIMIT=100
RATE_WINDOW=3600

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=game_store_
CACHE_LIFETIME=3600

# Log Configuration
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_PATH=app/logs

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_MINUTES=1

# CSRF Protection
CSRF_TOKEN_LENGTH=32
CSRF_TOKEN_NAME=csrf_token
CSRF_HEADER_NAME=X-CSRF-TOKEN

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Queue Configuration
QUEUE_CONNECTION=redis

# Security Configuration
SECURITY_RATE_LIMITING=true
SECURITY_MAX_REQUESTS=60
SECURITY_DECAY_MINUTES=1

# CORS Configuration
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_MAX_AGE=86400
CORS_SUPPORTS_CREDENTIALS=true

# Security Scanning
SECURITY_SCAN_ENABLED=true
SECURITY_SCAN_INTERVAL=3600
VULNERABILITY_SCANNING=true
PENETRATION_TESTING=true
SECURITY_AUDIT=true

# Load Balancer
LOAD_BALANCER_ENABLED=true
LOAD_BALANCER_ALGORITHM=round_robin
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=5

# CDN
CDN_ENABLED=true
CDN_DOMAIN=https://cdn.example.com
CDN_API_KEY=your_cdn_api_key
CDN_PURGE_URL=https://api.cdn.example.com/purge
CDN_STATS_URL=https://api.cdn.example.com/stats

# Monitoring
MONITORING_ENABLED=true
MONITORING_WEBHOOK_URL=https://webhook.example.com/monitoring
MONITORING_EMAIL_RECIPIENTS=admin@example.com,dev@example.com
MONITORING_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz 